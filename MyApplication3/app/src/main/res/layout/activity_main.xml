<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/host"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Host"
            android:inputType="textPersonName"
            android:text="localhost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/port"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Port"
            android:inputType="textPersonName"
            android:text="50052"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/host"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="26dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="215dp"
                android:layout_height="wrap_content"

                />

            <EditText
                android:id="@+id/textGrpcUnaryText"
                android:layout_width="258dp"
                android:layout_height="64dp"
                android:ems="10"
                android:inputType="text"
                android:text="Grpc Unary Call " />

            <Button
                android:id="@+id/submit"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="sendUnaryGrpcMessage"
                android:text="Submit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/message1" />

            <EditText
                android:id="@+id/message1"
                android:layout_width="241dp"
                android:layout_height="494dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Message"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/host" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>